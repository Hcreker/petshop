<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>pets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <h2>Gestao de Pets</h2>
            </div>
        </div>

        <div class="row">
            <p>
                <a class="btn btn-success" href="/add">Adicionar</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOME</th>
                        <th scope="col">ESPECIE</th>
                        <th scope="col">RAÇA</th>
                        <th scope="col">COR</th>
                        <th scope="col">PORTE</th>
                        <th scope="col">AÇÃO</th>
                    </tr>
                </thead>
                <tbody>
                    <% animals.forEach(animal => { %>
                        <tr>
                            <td><%= animal.id_pet %></td>
                            <td><%= animal.nome %></td>
                            <td><%= animal.especie %></td>
                            <td><%= animal.raca %></td>
                            <td><%= animal.cor %></td>
                            <td><%= animal.porte %></td>
                            <td>
                                <a class="btn btn-primary" href="/edit/<%= animal.id_pet %>">Editar</a>
                                <a class="btn btn-danger" href="/dell/<%= animal.id_pet %>">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
